                                <li class="nav-item">
                                    <a class="nav-link" href="LogIn.aspx">Ingresá</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="Registro.aspx">Creá tu cuenta</a>
                                </li>
                           <% } %>
                           <%if (Session["usuario"] != null && ObtenerRolUsuario() == 1) {%>
                                <li class="nav-item">
                                    <a class="nav-link" href="../FormsAdmin/AdminGestionFiliales.aspx">Filiales</a>
                                </li>
                                <li class="nav-item">
