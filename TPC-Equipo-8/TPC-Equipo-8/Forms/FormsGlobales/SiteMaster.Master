                                    <asp:Button ID="Button2" runat="server" Text="Salir" OnClick="btnSalir_Click" CssClass="nav-link" />
                                </li>
                           <% } %>
                           <%if (Session["usuario"] != null && ObtenerRolUsuario() == 2) {%>
                                <li class="nav-item">
                                    <a class="nav-link" href="PublicacionesDonantes.aspx">Doná</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="../FormsDonante/DonantePerfil.aspx">Perfil</a>
                                </li>
                                <li class="nav-item">
                                    <asp:Button ID="btnSalir" runat="server" Text="Salir" OnClick="btnSalir_Click" CssClass="nav-link" />
                                </li>
                           <% } %>
                           <%if (Session["usuario"] != null && ObtenerRolUsuario() == 3) {%>
                                <li class="nav-item">
                                    <a class="nav-link" href="../FormsFilial/FilialGestionDonantes.aspx">Donantes</a>
