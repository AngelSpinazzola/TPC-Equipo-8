                                <li class="nav-item">
                                    <a class="nav-link" href="../FormsFilial/FilialGestionPublicaciones.aspx">Publicaciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="../FormsFilial/FilialPerfil.aspx">Perfil</a>
                                </li>
                                <li class="nav-item">
                                    <asp:Button ID="Button1" runat="server" Text="Salir" OnClick="btnSalir_Click" CssClass="nav-link" />
                                </li>
                           <% } %>
                           <% if (Session["usuario"] != null) { %>
                               <li class="nav-item">
                                   <a class="nav-link">Bienvenido <%: ObtenerNombreUsuario() %></a>
